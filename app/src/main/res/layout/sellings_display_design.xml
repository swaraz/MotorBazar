<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/sellings_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/sellings_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#c60a0a"
            android:text="Vehicle Model"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#0C0C0C"
                android:layout_marginRight="10dp"
                android:text="â‚¹ "/>
            <TextView
                android:id="@+id/sellings_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#101e99"
                android:text="Price"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/markSold"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="SOLD"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/loginbtn_design"
            android:padding="15dp"
            android:drawableRight="@drawable/ic_sold_icon"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginLeft="3dp"
            android:drawableRight="@drawable/ic_delete_icon"
            android:background="@drawable/loginbtn_design"
            android:padding="15dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>