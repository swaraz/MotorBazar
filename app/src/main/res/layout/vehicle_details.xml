<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:id="@+id/slider_viewPager"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model :"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand :"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engine :"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/vehicle_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R15"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/vehicle_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yamaha"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/vehicle_engine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="155cc"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price :"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registration No. :"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Odometer Reading :"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/vehicle_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15000"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/vehicle_regNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4458"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/vehicle_odometerReading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14754"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/book_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbtn_design"
                android:padding="10dp"/>
            <Button
                android:id="@+id/add_to_wishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to wish"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbtn_design"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/ownerDetails_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Owner Details"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbtn_design"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/locationDetail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Location Info"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbtn_design"
                android:padding="10dp"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>