<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Please insert four images of your vehicle which includes front, side and back."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="0dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:background="@color/adding_photo_bg"
            android:src="@drawable/ic_add_items"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:src="@drawable/ic_add_items"
            android:background="@color/adding_photo_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:padding="0dp">
        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:background="@color/adding_photo_bg"
            android:src="@drawable/ic_add_items"/>
        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:src="@drawable/ic_add_items"
            android:background="@color/adding_photo_bg" />
    </LinearLayout>
    <Button
        android:id="@+id/add_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/loginbtn_unpressed"
        />
</LinearLayout>